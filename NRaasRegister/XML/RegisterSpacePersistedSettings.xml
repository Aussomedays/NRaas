    </kMaximumDeer>
    <kMaximumRaccoon value="2">
      <!--The maximum number of raccoon that can be spawned by the Pet Manager-->
    </kMaximumRaccoon>
    <kDebugging value="False">
      <!--Whether to display debugging notices-->
    </kDebugging>
    <kShowImmigrationNotice value="True">
      <!--Whether to display a notice when immigration is required for a role-->
    </kShowImmigrationNotice>
    <kAllowResidentAssignment value="False">
      <!--Whether to allow residents to be automatically assigned to role positions-->
