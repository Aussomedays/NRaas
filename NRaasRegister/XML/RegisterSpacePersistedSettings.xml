<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kShowLotMenu value="True">
      <!--Whether to display the menu when clicking on a Lot-->
    </kShowLotMenu>
    <kShowNotices value="True">
      <!--Whether to display the registration notifications-->
    </kShowNotices>
    <kPayPerHour value="100">
      <!--How much to pay each role assigned sim per hour they are working-->
    </kPayPerHour>
    <kAllowTourists value="True">
      <!--Whether to allow tourists to spawn in the town-->
    </kAllowTourists>
    <kAllowPaparazzi value="True">
      <!--Whether to allow paparazzi to spawn in the town-->
    </kAllowPaparazzi>
    <kAllowImmigration value="True">
      <!--Whether to allow immigrants to spawn to fill role positions-->
    </kAllowImmigration>
    
    <kMaximumWildHorses value="4">
      <!--The maximum number of wild horses that can be spawned by the Pet Manager-->
